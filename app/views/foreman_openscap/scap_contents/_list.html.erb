<table class="table table-bordered table-striped table-two-pane">
  <tr>
    <th>Title</th>
    <th>Filename</th>
    <th>Created</th>
    <th></th>
  </tr>
  <% @contents.each do |c| %>
    <tr>
      <td> <%= c.title %> </td>
      <td> <%= c.original_filename %> </td>
      <td> <%= _('%s ago') % time_ago_in_words(c.created_at.getlocal) %> </td>
      <td>
        <%= action_buttons(
                link_to_if_authorized(_('Edit'), hash_for_edit_openscap_scap_content_path(:id => c.id)),
                link_to_if_authorized(_('Download'), hash_for_openscap_scap_content_path(:id => c.id))
            ) %>
      </td>
    </tr>
  <% end %>
</table>
